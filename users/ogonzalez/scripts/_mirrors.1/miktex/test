# aixo nomes te sentit des del mirror complet. els mirrors parcials fets
# amb "noumirror" (per dur a casa) no tenen sentit aqui

nom=`hostname`

# grandaries, dates, noms i paths han de coincidir
# ==> un diff del test1.out creat aqui i a casa ha de donar 0 diferencies
find . -exec ls -l {} \; | cut -c32- | sort -k5 | tee 0_ls.$nom
echo '-------------'

# idem pels md5sum de tots els fitxers
find . -type f -exec md5sum {} \; | sort -k2 | tee 0_md5.$nom
echo '-------------'

# tambe comprovo els md5sum de total.html
cd tm/packages
tr -d "\015" < total.html | grep [a-z0-9]$ | awk ' gsub("<[^>]*>"," ") { print $3"  "$1 }'|sort -k2 >/tmp/md5.lst
md5sum -c /tmp/md5.lst | tee ../../0_total.$nom
rm /tmp/md5.lst

