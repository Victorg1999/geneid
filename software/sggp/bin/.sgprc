#
# setting vars
#
S_CUTOFF        47      # Substract to tblastx scores S_CUTOFF - SCF
SCF             12      #
SHSP            0       # Shrink HSPs by
WTBX            0.20    # Weight of tblastx score
#
# paths
#
BIN_DIR         {$WORK}/bin
BLAST_DIR       /usr/local/molbio/bin
WORKING_DIR     .
PARAM_DIR       {BIN_DIR}/param
TMP_DIR         /tmp
#
# blast program
#
BLAST           {BLAST_DIR}/tblastx {DATABASE} {QUERY} {MATRIX} {OPTIONS}
DB_BUILDER      {BLAST_DIR}/pressdb {DATABASE}
BLAST_MATRIX    {PARAM_DIR}/blosum62mod
BLAST_OPTIONS   -matrix {BLAST_MATRIX} -hspmax 10000 -nogap
#
# HSPs projection
#
GET_HSPs        {BIN_DIR}/blast2hsp {BLAST_FILE}
GET_SRs         {BIN_DIR}/blast2gff -g {HSP_FILE}
#
# gene prediction
#
GENEID          {BIN_DIR}/geneid {OPTIONS} {FASTA}
GENEID_PARAM    {PARAM_DIR}/human3iso.param
GENEID_OPTIONS  -G -P {GENEID_PARAM} -S {SR_FILE}
#
# postscript plots
#
GFF2PS          {BIN_DIR}/gff2ps {GFF2PS_OPTIONS} -- {GFF_FILE}
GFF2PS_PARAM    {PARAM_DIR}/sgp2-gff2ps.rc
GFF2PS_OPTIONS  -C {GFF2PS_PARAM}
#
# postscript dotplots
#
APLOT           {BIN_DIR}/gff2aplot {APLOT_OPTIONS} -- {APLOT_FILE}
APLOT_PARAM     {PARAM_DIR}/sgp2-aplot.rc
APLOT_OPTIONS   -O {APLOT_PARAM}
